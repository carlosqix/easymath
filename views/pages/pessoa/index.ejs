<h1>LISTAGEM DE PESSOAS:</h1>
<table>
  <tr>
    <th>NOME:</th>
    <th>SOBRENOME:</th>
    <th>SEXO:</th>
    <th>DATA DE NASCIMENTO:</th>	
    <th>AÇÕES:</th>
  </tr>
  <% for (i = 0; i< pessoas.length; i++) { %>
  <tr>
    <td><%= pessoas[i].nome %> </td>
    <td><%= pessoas[i].sobrenome %> </td>
    <td><%= pessoas[i].sexo %> </td>
    <td><%= pessoas[i].data %></td>
    <td>
      <a href="/pessoa/edit/<%= pessoas[i].id %>">Editar</a>
      <a href="/pessoa/delete/<%= pessoas[i].id %>" 
      		onclick= "return confirm ('Deseja Realmente Excluir?')">
      Remover</a>
    </td>
  </tr>
  <% } %>
</table>
